<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="335dp"
        android:layout_height="110dp"
        android:text="@string/First_screen_welcome_string"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="30dp"
        tools:layout_editor_absoluteY="45dp"
        tools:layout_editor_absoluteX="41dp" />


    <Button
        android:background="@color/colorPrimary"
        android:id="@+id/button_click_me"
        android:textColor="@android:color/white"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:text="@string/button_click_me"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/button_login"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
    android:background="@color/colorPrimary"
    android:id="@+id/button_login"
    android:textColor="@android:color/white"
    android:layout_width="200dp"
    android:layout_height="25dp"
    android:text="@string/button_login"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="384dp" />

    <Button
    android:background="@color/colorPrimary"
    android:id="@+id/button_exit"
    android:textColor="@android:color/white"
    android:layout_width="200dp"
    android:layout_height="25dp"
    android:text="@string/button_exit"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/button_click_me"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/TextFile_account_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Account Name"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp" />

    <EditText
        android:id="@+id/TextFile_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberPassword"
        android:selectAllOnFocus="false"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/TextFile_account_name"
        android:layout_marginLeft="85dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
